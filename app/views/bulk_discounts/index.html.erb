<h1><%= @merchant.name %> Bulk Discounts</h1>
<h3>Upcoming Holidays</h3>
<% @holidays.next_three_holidays.each do |holiday| %>
  <p><%= holiday %></p>
<% end %>
<p><%= link_to "Create Discount", new_merchant_bulk_discount_path %></p>
<% @merchant.bulk_discounts.each do |discount| %>
  <div id="discount-<%= discount.id %>">
  <p><%= link_to "#{discount.percent}% off #{discount.quantity} items", merchant_bulk_discount_path(@merchant, discount) %>
   - <%= link_to "Delete", merchant_bulk_discount_path(@merchant, discount), method: :delete %></p></div>
<% end %>